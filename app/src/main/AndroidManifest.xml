<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.learnquiz_fe">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnQuiz_FE">

        <activity
            android:name=".ui.activities.RouterActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"> </activity>

        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnQuiz_FE">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnQuiz_FE">
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnQuiz_FE">
        </activity>

        <activity
            android:name=".ui.activities.payment.PayActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnQuiz_FE">
        </activity>
        <activity
            android:name=".ui.activities.payment.PaySuccessActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnQuiz_FE">
        </activity>
        <activity
            android:name=".ui.activities.payment.PayFailedActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnQuiz_FE">
        </activity>

        <activity
            android:name=".ui.activities.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnQuiz_FE" />

        <activity
            android:name=".ui.activities.CameraActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LearnQuiz_FE" />

        <activity
            android:name=".ui.activities.PhotoPreviewActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LearnQuiz_FE" />

        <activity
            android:name=".ui.activities.QuizGenerationActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnQuiz_FE" />

        <activity android:name=".ui.activities.quiz.QuizDetailActivity" />

        <activity
            android:name=".ui.activities.QuizTakingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LearnQuiz_FE" />

        <activity
            android:name=".ui.activities.QuizResultActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnQuiz_FE" />

        <activity
            android:name=".ui.activities.feedback.QuizFeedbackActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LearnQuiz_FE" />

    </application>

</manifest>