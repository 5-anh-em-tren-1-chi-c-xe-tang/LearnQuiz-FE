<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Quiz Title -->
        <TextView
            android:id="@+id/tv_quiz_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_more_options"
            tools:text="JavaScript Fundamentals" />

        <!-- More Options Icon -->
        <ImageView
            android:id="@+id/iv_more_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/darker_gray"
            android:contentDescription="More options" />

        <!-- Quiz Description -->
        <TextView
            android:id="@+id/tv_quiz_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quiz_title"
            tools:text="Test your knowledge of JavaScript basics" />

        <!-- Tags (Questions, Category) -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:flexWrap="wrap"
            app:alignItems="flex_start"
            app:justifyContent="flex_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quiz_description">

            <!-- Example for questions tag -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_questions_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:chipBackgroundColor="#E0E0E0"
                app:chipCornerRadius="4dp"
                android:layout_marginEnd="4dp"
                tools:text="20 questions" />

            <!-- Example for category tag (e.g., Programming, Design) -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:chipBackgroundColor="#E0E0E0"
                app:chipCornerRadius="4dp"
                tools:text="Programming" />

        </com.google.android.flexbox.FlexboxLayout>

        <!-- Public/Private and Plays -->
        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flexbox_tags"
            app:layout_constraintEnd_toStartOf="@+id/tv_quiz_date">

            <!-- Public/Private Status -->
            <ImageView
                android:id="@+id/iv_privacy_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_public"
                app:tint="@android:color/darker_gray"
                android:layout_gravity="center_vertical"
                android:contentDescription="Privacy status icon" />

            <TextView
                android:id="@+id/tv_privacy_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                tools:text="Public" />

            <!-- Plays Count -->
            <ImageView
                android:id="@+id/iv_plays_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                app:tint="@android:color/darker_gray"
                android:layout_gravity="center_vertical"
                android:contentDescription="Plays count icon" />

            <TextView
                android:id="@+id/tv_plays_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="4dp"
                tools:text="145 plays" />
        </LinearLayout>

        <!-- Quiz Date -->
        <TextView
            android:id="@+id/tv_quiz_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/layout_stats"
            tools:text="Oct 25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>