<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="@string/back"
                    app:tint="@android:color/black" />

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Update Quiz"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical">

                <ImageButton
                    android:id="@+id/btnSave"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_check"

                    app:tint="@color/green_500" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quiz Basic Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quiz Information"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Quiz Title -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilQuizTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quiz Title"
                        app:boxStrokeColor="@color/blue_400"
                        app:hintTextColor="@color/blue_400"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etQuizTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="2"
                            tools:text="JavaScript Fundamentals Quiz" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Quiz Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilQuizDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quiz Description"
                        app:boxStrokeColor="@color/blue_400"
                        app:hintTextColor="@color/blue_400"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etQuizDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="5"
                            android:gravity="top"
                            tools:text="Test your knowledge of core JavaScript concepts" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Duration -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Duration (minutes)"
                        app:boxStrokeColor="@color/blue_400"
                        app:hintTextColor="@color/blue_400"
                        app:suffixText="min"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            tools:text="15" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Questions Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Questions"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Add Question"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_add"
                    app:iconSize="18dp"
                    app:cornerRadius="20dp"
                    style="@style/Widget.Material3.Button.TonalButton" />
            </LinearLayout>

            <!-- Questions List -->
            <LinearLayout
                android:id="@+id/questionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Question Item 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Question Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Question 1"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btnDeleteQuestion1"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="?attr/selectableItemBackgroundBorderless"

                                android:contentDescription="Delete question"
                                app:tint="@color/red_500" />
                        </LinearLayout>

                        <!-- Question Text Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter question"
                            app:boxStrokeColor="@color/blue_400"
                            app:hintTextColor="@color/blue_400"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etQuestion1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="2"
                                android:maxLines="4"
                                android:gravity="top"
                                tools:text="What is the capital of France?" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Answer Options -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer Options"
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Answer 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:text="A."
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:hint="Option A"
                                app:boxStrokeColor="@color/blue_400"
                                app:hintTextColor="@color/blue_400"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etAnswer1A"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:maxLines="2"
                                    tools:text="Paris" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <CheckBox
                                android:id="@+id/cbAnswer1A"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:gravity="center"
                                android:buttonTint="@color/green_500"
                                android:contentDescription="Mark as correct answer" />
                        </LinearLayout>

                        <!-- Answer 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:text="B."
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:hint="Option B"
                                app:boxStrokeColor="@color/blue_400"
                                app:hintTextColor="@color/blue_400"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etAnswer1B"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:maxLines="2"
                                    tools:text="London" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <CheckBox
                                android:id="@+id/cbAnswer1B"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:gravity="center"
                                android:buttonTint="@color/green_500"
                                android:contentDescription="Mark as correct answer" />
                        </LinearLayout>

                        <!-- Answer 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:text="C."
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:hint="Option C"
                                app:boxStrokeColor="@color/blue_400"
                                app:hintTextColor="@color/blue_400"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etAnswer1C"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:maxLines="2"
                                    tools:text="Berlin" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <CheckBox
                                android:id="@+id/cbAnswer1C"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:gravity="center"
                                android:buttonTint="@color/green_500"
                                android:contentDescription="Mark as correct answer" />
                        </LinearLayout>

                        <!-- Answer 4 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:text="D."
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:hint="Option D"
                                app:boxStrokeColor="@color/blue_400"
                                app:hintTextColor="@color/blue_400"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etAnswer1D"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:maxLines="2"
                                    tools:text="Rome" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <CheckBox
                                android:id="@+id/cbAnswer1D"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:gravity="center"
                                android:buttonTint="@color/green_500"
                                android:contentDescription="Mark as correct answer" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Question Item 2 (Example) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Question Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Question 2"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btnDeleteQuestion2"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="?attr/selectableItemBackgroundBorderless"

                                android:contentDescription="Delete question"
                                app:tint="@color/red_500" />
                        </LinearLayout>

                        <!-- Question Text Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter question"
                            app:boxStrokeColor="@color/blue_400"
                            app:hintTextColor="@color/blue_400"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etQuestion2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="2"
                                android:maxLines="4"
                                android:gravity="top"
                                tools:text="Which keyword is used to declare a variable in JavaScript?" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Answer Options -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer Options"
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Answers for Question 2 (simplified for brevity) -->
                        <!-- Same structure as Question 1 answers -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[4 Answer options with checkboxes...]"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:padding="24dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdateQuiz"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Update Quiz"
        android:textStyle="bold"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_check"
        app:iconGravity="textStart"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/blue_500" />

    <!-- Progress Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>