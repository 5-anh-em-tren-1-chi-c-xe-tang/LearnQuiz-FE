<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.myquizzes.MyQuizzesFragment">

    <!-- Top Header Section (Purple Background) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_my_quizzes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_quizzes_title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_quiz_count_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_count_info"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_quizzes_title"
            tools:text="5 / 5 quizzes created" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_quiz_header"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/button_create"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_add"
            app:iconTint="@android:color/white"
            app:strokeColor="@android:color/white"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_my_quizzes_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_my_quizzes_title" />

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_bar_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quiz_count_info">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iv_search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="@android:color/darker_gray"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/search_icon_description" />

                <EditText
                    android:id="@+id/et_search_quizzes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_quizzes_hint"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_search_icon"
                    app:layout_constraintEnd_toStartOf="@+id/iv_filter_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/iv_filter_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_filter_list"
                    app:tint="@android:color/darker_gray"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/filter_icon_description" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Free Limit Reached Banner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/limit_banner_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/banner_background_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_section">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_lock_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/warning_orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Lock icon" />

            <TextView
                android:id="@+id/tv_limit_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/limit_title"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_lock_icon"
                app:layout_constraintEnd_toStartOf="@+id/btn_upgrade"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_limit_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/limit_description"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_lock_icon"
                app:layout_constraintEnd_toStartOf="@+id/btn_upgrade"
                app:layout_constraintTop_toBottomOf="@+id/tv_limit_title"
                tools:text="You've created 5 quizzes. Upgrade to Premium for unlimited quiz creation!" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_upgrade"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/warning_orange"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Category Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/scroll_view_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/limit_banner_card">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all_quizzes"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_all_quizzes"
                android:checkable="true"
                android:checked="true"
                android:textColor="@color/chip_text_color_selector"
                app:chipBackgroundColor="@color/chip_background_color_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_programming"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_programming"
                android:checkable="true"
                android:textColor="@color/chip_text_color_selector"
                app:chipBackgroundColor="@color/chip_background_color_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_design"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_design"
                android:checkable="true"
                android:textColor="@color/chip_text_color_selector"
                app:chipBackgroundColor="@color/chip_background_color_selector" />

            <!-- Add more chips as needed -->

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Quiz List (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quizzes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_chips"
        app:layout_constraintBottom_toBottomOf="parent"
    tools:listitem="@layout/item_myquiz" />

    <!-- =================== THÊM VÀO ĐÂY =================== -->
    <!-- Progress Bar for loading state -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/rv_quizzes"
        app:layout_constraintEnd_toEndOf="@+id/rv_quizzes"
        app:layout_constraintTop_toTopOf="@+id/rv_quizzes"
        app:layout_constraintBottom_toBottomOf="@+id/rv_quizzes" />

    <!-- Empty State TextView -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_my_quizzes_state"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/rv_quizzes"
        app:layout_constraintEnd_toEndOf="@+id/rv_quizzes"
        app:layout_constraintTop_toTopOf="@+id/rv_quizzes"
        app:layout_constraintBottom_toBottomOf="@+id/rv_quizzes" />

    <!-- Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_text_snippet"
        app:tint="@android:color/white"
        app:backgroundTint="@color/material_dynamic_primary40"
        android:visibility="gone"
        tools:visibility="visible"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_from_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/fab_from_text_description" />

    <TextView
        android:id="@+id/tv_from_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_fab_label"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="@string/fab_from_text_label"
        android:textColor="@android:color/white"
        android:elevation="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/fab_from_text"
        app:layout_constraintTop_toTopOf="@+id/fab_from_text"
        app:layout_constraintBottom_toBottomOf="@+id/fab_from_text" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_from_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_image"
        app:tint="@android:color/white"
        app:backgroundTint="@color/material_dynamic_primary40"
        android:visibility="gone"
        tools:visibility="visible"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_main_create"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/fab_from_image_description" />

    <TextView
        android:id="@+id/tv_from_image_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_fab_label"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="@string/fab_from_image_label"
        android:textColor="@android:color/white"
        android:elevation="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/fab_from_image"
        app:layout_constraintTop_toTopOf="@+id/fab_from_image"
        app:layout_constraintBottom_toBottomOf="@+id/fab_from_image" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:contentDescription="@string/fab_main_create_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
