<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".ui.fragments.myquizzes.MyQuizzesFragment">

    <!-- Top Header Section (Blue Background) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:paddingBottom="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_my_quizzes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_quizzes_title"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_quiz_count_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_count_info"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnPrimary"
            android:alpha="0.87"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_quizzes_title"
            tools:text="5 / 5 quizzes created" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_quiz_header"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/button_create"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_add"
            app:iconTint="?attr/colorOnPrimary"
            app:strokeColor="?attr/colorOnPrimary"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_my_quizzes_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_my_quizzes_title" />

        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_bar_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quiz_count_info">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/gray_600"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/search_icon_description" />

                <EditText
                    android:id="@+id/et_search_quizzes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_quizzes_hint"
                    android:textColorHint="@color/gray_500"
                    android:textColor="?attr/colorOnSurface"
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginStart="4dp"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    app:layout_constraintStart_toEndOf="@+id/iv_search_icon"
                    app:layout_constraintEnd_toStartOf="@+id/iv_filter_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/iv_filter_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_filter_list"
                    app:tint="@color/gray_600"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/filter_icon_description" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Free Limit Reached Banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/limit_banner_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/yellow_50"
        app:strokeColor="@color/yellow_300"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_section">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_lock_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/orange_600"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/lock_icon_description" />

            <TextView
                android:id="@+id/tv_limit_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/limit_title"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_lock_icon"
                app:layout_constraintEnd_toStartOf="@+id/btn_upgrade"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_limit_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/limit_description"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/gray_700"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_lock_icon"
                app:layout_constraintEnd_toStartOf="@+id/btn_upgrade"
                app:layout_constraintTop_toBottomOf="@+id/tv_limit_title"
                tools:text="You've created 5 quizzes. Upgrade to Premium for unlimited quiz creation!" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upgrade"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_upgrade"
                android:textColor="@color/white"
                app:backgroundTint="@color/orange_600"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Category Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/scroll_view_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/limit_banner_card">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all_quizzes"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_all_quizzes"
                android:checkable="true"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_programming"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_programming"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_design"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_design"
                android:checkable="true" />

            <!-- Add more chips as needed -->

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Quiz List (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quizzes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_chips"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_myquiz" />

    <!-- Progress Bar for loading state -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="?attr/colorPrimary"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/rv_quizzes"
        app:layout_constraintEnd_toEndOf="@+id/rv_quizzes"
        app:layout_constraintTop_toTopOf="@+id/rv_quizzes"
        app:layout_constraintBottom_toBottomOf="@+id/rv_quizzes" />

    <!-- Empty State TextView -->
    <LinearLayout
        android:id="@+id/tvEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/rv_quizzes"
        app:layout_constraintEnd_toEndOf="@+id/rv_quizzes"
        app:layout_constraintTop_toTopOf="@+id/rv_quizzes"
        app:layout_constraintBottom_toBottomOf="@+id/rv_quizzes">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_add"
            app:tint="@color/gray_400"
            android:contentDescription="@string/empty_state_icon_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/empty_my_quizzes_state"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/gray_600"
            android:gravity="center" />
    </LinearLayout>

    <!-- Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_text_snippet"
        app:tint="?attr/colorOnSecondary"
        app:backgroundTint="?attr/colorSecondary"
        android:visibility="gone"
        tools:visibility="visible"
        app:fabSize="mini"
        app:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/fab_from_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/fab_from_text_description" />

    <TextView
        android:id="@+id/tv_from_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_fab_label"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:text="@string/fab_from_text_label"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/white"
        android:elevation="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/fab_from_text"
        app:layout_constraintTop_toTopOf="@+id/fab_from_text"
        app:layout_constraintBottom_toBottomOf="@+id/fab_from_text" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_from_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_image"
        app:tint="?attr/colorOnSecondary"
        app:backgroundTint="?attr/colorSecondary"
        android:visibility="gone"
        tools:visibility="visible"
        app:fabSize="mini"
        app:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/fab_main_create"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/fab_from_image_description" />

    <TextView
        android:id="@+id/tv_from_image_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_fab_label"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:text="@string/fab_from_image_label"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/white"
        android:elevation="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/fab_from_image"
        app:layout_constraintTop_toTopOf="@+id/fab_from_image"
        app:layout_constraintBottom_toBottomOf="@+id/fab_from_image" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/fab_main_create_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
